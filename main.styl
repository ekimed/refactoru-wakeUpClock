.outer-shell
	position relative
	width 500px
	height 275px
	background-color grey
	margin 80px auto
	border-radius 10px

.inner-shell
	position absolute
	width 474px
	height 250px
	left 13px
	top 12px
	background-color black


.am-pm
	float left
	clear left
	text-align center
	height 100px
	width 50px
	color #fff
	margin-top 96px

#am, #pm, .am-ch, .pm-ch, .khz, .mhz
	width 51px
	margin 0
	margin-left 1px
	text-align center
	display inline-block
	color #fff


.am-ch
	top 140px
	display inline-block


.clock-screen
	display inline-block
	width 400px
	height 184px
	margin-top 18px
	background #A41616

.indicator
	margin-top 10px

.circle
	float left
	clear left
	height 20px
	width 20px
	border-radius 25px
	background red
	border 2px solid #fff

#am-position
	margin-left 3px
	margin-top 80px

#pm-position
	margin-left 3px
	margin-top 111px

#hour, #minutes
	display inline-block
	width 184px
	height 300px

#colon
	display inline-block
	position absolute
	top -8px
	left 140px

.time
	position absolute
	font-size 130px
	margin-top 10px 
	margin-left 40px
	color red


